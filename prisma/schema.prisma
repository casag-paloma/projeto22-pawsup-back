// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id    Int     @id @default(autoincrement())
  name  String
  email String  @unique
  password String

  @@map("users")
}

model Cat {
  id    Int     @id @default(autoincrement())
  name  String
  imageUrl String
  age   String?
  genre String?
  fivOrFelf String?
  isVacinated Boolean?
  isCastraded Boolean?
  description String?

  @@map("cats")
}
